<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ToolBar" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:textSize">20sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ProfileLinearLayoutFotoSobat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/image_bg_two</item>
        <item name="android:padding">2dp</item>
    </style>

    <style name="ProfileImageViewFotoSobat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:src">@drawable/icon_addphoto</item>
    </style>

    <style name="ProfileTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#464747</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="ProfileEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#a6a6a6</item>
        <item name="android:background">@drawable/custom_edittext</item>
    </style>

    <style name="ProfileLinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:weightSum">2</item>
    </style>

    <style name="ProfileLinearLayoutChild">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="ProfileRelativeLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/custom_edittext</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>

    <style name="ProfileSpinner">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@null</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:layout_marginRight">40dp</item>
    </style>

    <style name="ProfileSpinnerImageView">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:padding">15dp</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:src">@drawable/arrow_down_gray</item>
    </style>

    <style name="ProgressBar">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

</resources>
